<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <persistence-unit name="restaurantPU">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <!-- existing product entities -->
        <class>ro.unitbv.restaurant.Product</class>
        <class>ro.unitbv.restaurant.Food</class>
        <class>ro.unitbv.restaurant.Drink</class>

        <!-- new entities for Iteration 7 -->
        <class>ro.unitbv.restaurant.model.User</class>
        <class>ro.unitbv.restaurant.model.RestaurantTable</class>
        <class>ro.unitbv.restaurant.model.Order</class>
        <class>ro.unitbv.restaurant.model.OrderItem</class>

        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/restaurant_db"/>
            <property name="jakarta.persistence.jdbc.user" value="postgres"/>

            <property name="jakarta.persistence.jdbc.password" value="1q2w3e"/>

            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>